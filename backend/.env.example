# ========================================
# DISTRIBUTION MANAGER PWA - CONFIGURACIÓN
# ========================================
# Copiar este archivo como .env y modificar valores

# Servidor
PORT=3000
HOST=0.0.0.0

# JWT Secret (CAMBIAR EN PRODUCCIÓN - usar string aleatorio largo)
JWT_SECRET=tu_clave_secreta_muy_larga_y_segura_cambiar_en_produccion_12345
JWT_EXPIRES_IN=8h

# Directorio base de datos (ruta absoluta en tu LAN)
# Ejemplo Windows: C:\\Users\\TuUsuario\\Documents\\DistributionData
# Ejemplo Linux: /home/usuario/distribution-data
DATA_PATH=./data

# Configuración de red LAN
# Cuando el usuario se conecte por VPN, usará esta IP
LAN_IP=192.168.1.100

# Usuarios permitidos (formato JSON)
# En producción usar base de datos o LDAP
USERS=[{"username":"manager","password":"Manager2024!","role":"Manager","name":"Gerente Principal"},{"username":"analista1","password":"Analista2024!","role":"Analyst","name":"Juan Perez"},{"username":"coord1","password":"Coord2024!","role":"Coordinator","name":"Maria Garcia"}]

# CORS - Origenes permitidos (separados por coma)
ALLOWED_ORIGINS=http://localhost:3000,http://192.168.1.100:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
